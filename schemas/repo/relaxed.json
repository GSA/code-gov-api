{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "agency": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "acronym": {
          "type": "string"
        },
        "website": {
          "type": "string"
        },
        "codeUrl": {
          "type": "string"
        }
      }
    },
    "organization": {
      "type": ["string", "null"]
    },
    "name": {
      "type": ["string", "null"]
    },
    "description": {
      "type": ["string", "null"]
    },
    "status": {
      "type": ["string", "null"]
    },
    "vcs": {
      "type": ["string", "null"]
    },
    "repository": {
      "type": ["string", "null"]
    },
    "license": {
      "type": ["string", "null"]
    },
    "homepage": {
      "type": ["string", "null"]
    },
    "downloadURL": {
      "type": ["string", "null"]
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "languages": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "contact": {
      "type": "object",
      "properties": {
        "name": {
          "type": ["string", "null"]
        },
        "email": {
          "type": ["string", "null"]
        },
        "twitter": {
          "type": ["string", "null"]
        },
        "phone": {
          "type": ["string", "null"]
        }
      },
      "required": ["email"]
    },
    "partners": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": ["string", "null"]
          },
          "email": {
            "type": ["string", "null"]
          }
        }
      }
    },
    "openSourceProject": {
      "type": ["integer", "null"]
    },
    "governmentWideReuseProject": {
      "type": ["integer", "null"]
    },
    "closedProject": {
      "type": ["integer", "null"]
    },
    "exemption": {
      "type": ["integer", "null"]
    },
    "exemptionText": {
      "type": ["string", "null"]
    },
    "updated": {
      "type": "object",
      "properties": {
        "metadataLastUpdated": {
          "type": ["string", "null"]
        },
        "lastCommit": {
          "type": "string"
        },
        "sourceCodeLastModified": {
          "type": "string"
        }
      }
    }
  },
  "required": [
    "name", "description", "license", "openSourceProject",
    "governmentWideReuseProject", "tags", "contact", "repository"
  ]
}
