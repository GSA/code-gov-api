        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "size",
            "in": "query",
            "description": "Number of programming languages to return",
            "required": false,
            "type": "number"
          },
          {
            "name": "from",
            "in": "query",
            "description": "Specify an offset to return",
            "required": false,
